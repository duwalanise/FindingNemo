<body class = "jumbotron">
	<div style=" margin-top:50px" class="mainbox col-md-7 col-md-offset-1 col-sm-8 col-sm-offset-2">
  		<div class="panel panel-info">
    		<div class="panel-heading">
      			<div class="panel-title">Forgot your password?
      			</div>
    		</div>
    		<div style="padding-top:30px" class="panel-body" >
      			<div class="form-horizontal" role="form">

    				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  					<%= devise_error_messages! %>

  					<div class="field row">
    					<%= f.label :email,:class=>"col-md-3" %>
    					<div class="input-group" style="margin-bottom: 25px" >
            				<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
    						<%= f.email_field :email, :class=>"col-md-9 form-control",:style=>"width:70%;",:placeholder=>"example@example.com" %>
    					</div>
  					</div>
  					</br>

  					<div class="actions col-md-3", style="margin-top:10px" >
    			<%= f.submit "Reset Password", :class=>"btn btn-success"%>
  					</div>
  					<%end%>
  				</div>
  				 <div class="form-group col-md-12 control" style="border-top: 1px solid#888; padding-top:15px; font-size:85%">

        			<%= render "devise/shared/links" %>
      			</div>
  			</div>
  		</div>
  	</div>
 </body>
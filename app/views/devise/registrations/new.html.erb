<body class="jumbotron">
<div style=" margin-top:50px" class="mainbox col-md-5 col-md-offset-4 col-sm-8 col-sm-offset-2">
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">Sign Up</div>
    </div>
    <div class="panel-body" >
      <div class="form-horizontal" role="form">

        <!--<div style="display:none" class="alert alert-danger">-->
          <!--<p>Error:</p>-->
          <!--<span></span>-->
        <!--</div>-->

    
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


   
  <div class="field row">
    <%= f.label :email,:class=>"col-md-3" %>
    <div class="input-group" style="margin-bottom: 25px" >
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
    <%= f.email_field :email, :class=>"col-md-9 form-control",:style=>"width:70%;",:placeholder=>"example@example.com"%>
    </div>
  </div>
            </br>

  <div class="field row">


    <%= f.label :password,:class=>"col-md-3" %>
    <div class="input-group" style="margin-bottom: 25px" >
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <% if @validatable %>

      <%= f.password_field :password, autocomplete: "off",:class=>"col-md-9 form-control", :style=>"width:70%;" ,:placeholder=>'(8 characters minimum)'%>
<%else%>
        <%= f.password_field :password, autocomplete: "off",:class=>"col-md-9 form-control", :style=>"width:70%;",:placeholder=>"minimum 8 characters"%>
    <% end %>
    </div>
        </div>
</br>

  <div class="field row">
    <%= f.label :password_confirmation ,:class=>"col-md-3"%>
    <div class="input-group" style="margin-bottom: 25px" >
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
    <%= f.password_field :password_confirmation, autocomplete: "off" ,:class=>"col-md-9 form-control" ,:style=>"width:70%;",:placeholder=>"Enter your password again"%>
      </div>
      </div>
</br>
   
</br>
  <div class="actions col-md-3",style="margin-top:10px">
    <%= f.submit "Sign up" ,:class=>"btn btn-success"%>
  </div>
<% end %>
</div>
      <div class="form-group col-md-12 control" style="border-top: 1px solid#888; padding-top:15px; font-size:85%">

        <%= render "devise/shared/links" %>
      </div>

</div>
      </div>
    </div>
    </body>